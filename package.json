{
  "name": "split-media-by-srt-gui",
  "description": "Split an audio or video file by using a srt timing file.",
  "productName": "Split Media by SRT",
  "version": "1.1.1",
  "private": true,
  "author": "Daniel Bair",
  "copyright": "Â© 2018, Daniel Bair",
  "homepage": "https://github.com/danielbair/split-media-by-srt#readme",
  "main": "app/background.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielbair/split-media-by-srt.git"
  },
  "keywords": [
    "ffmpeg",
    "split",
    "media",
    "audio",
    "video",
    "srt"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/danielbair/split-media-by-srt/issues"
  },
  "build": {
    "appId": "com.danielbair.split-media-by-srt",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "fs-jetpack": "^1.3.1",
    "subtitles-parser": "^0.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chai": "^4.2.0",
    "css-loader": "^2.1.1",
    "electron": "^11.5.0",
    "electron-builder": "^20.44.4",
    "electron-mocha": "^10.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^8.2.1",
    "source-map-support": "^0.5.19",
    "spectron": "^13.0.0",
    "style-loader": "^0.19.0",
    "webpack": "^5.10.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
